<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFCC80">

    <TextView
        android:id="@+id/tvCalorieProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Günlük Kalori Hedefi: 0/2000 kcal"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/pbCalorieProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:progressTint="#FF6200EE"
        android:layout_marginBottom="16dp" />

    <!-- Uygulama Başlığı -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CalorieMeter"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:fontFamily="sans-serif-black" />

    <!-- Profil Butonu -->
    <Button
        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="4dp" />

    <!-- Yemek Günlüğü Butonu -->
    <Button
        android:id="@+id/btnFoodDiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Diary"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="4dp" />

    <!-- Yemek Detayları Butonu -->
    <Button
        android:id="@+id/btnFoodDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Details"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="4dp" />

    <!-- Egzersiz Takibi Butonu -->
    <Button
        android:id="@+id/btnExerciseTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Tracking"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:elevation="4dp" />

    <!-- Hedef Butonu -->
    <Button
        android:id="@+id/btnGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

    <!-- Motivasyon Mesajı -->
    <TextView
        android:id="@+id/tvMotivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stay focused! You're making progress towards your goals every day!"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#FFF3E0"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:elevation="4dp" />

</LinearLayout>
