<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calorimeter5"
        tools:targetApi="31">

        <!-- MainActivity: Uygulamanın giriş noktası -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainMenuActivity: Ana Menü -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="true" />

        <!-- ProfileActivity: Kullanıcı Profil Sayfası -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- FoodDiaryActivity: Yemek Günlüğü -->
        <activity
            android:name=".FoodDiaryActivity"
            android:exported="true" />

        <!-- ExerciseActivity: Egzersiz Takibi -->
        <activity
            android:name=".ExerciseActivity"
            android:exported="true" />

        <!-- GoalActivity: Hedefler ve Motivasyon -->
        <activity
            android:name=".GoalActivity"
            android:exported="true" />

    </application>

</manifest>
